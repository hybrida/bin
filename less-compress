#! /bin/bash

hgroot=`hg root`
styledir="$hgroot/style"
lessdir="$styledir/less"
cssdir="$styledir/css"
echo "Antar at less-mappen ligger i $lessdir"

cd "$cssdir"

if [[ -f min.css ]]; then
	rm min.css
fi

cd "$lessdir"

cat *.less > min.less
lessc -x min.less > "$cssdir/min.css"

rm min.less

echo "Stilarkene er nÃ¥ ferdig prosessert"
